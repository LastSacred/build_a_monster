<h1><%= @monster.name %></h1>

<div class="monster_bod">
  <%= image_tag(@imgs[:head], class: "head" + " " + @imgs[:head].gsub(".png", "")) %><br />
  <%= image_tag(@imgs[:torso], class: "torso" + " " + @imgs[:torso].gsub(".png", "")) %><br />
  <%= image_tag(@imgs[:leg], class: "leg" + " " + @imgs[:leg].gsub(".png", "")) %><br />
  <%= image_tag(@imgs[:l_arm], class: "l_arm" + " " + @imgs[:l_arm].gsub(".png", "")) %><br />
  <%= image_tag(@imgs[:r_arm], class: "r_arm" + " " + @imgs[:r_arm].gsub(".png", "")) %><br />
</div>

<h2>Stats</h2>

<% @stats.each do |attr, value| %>
  <%= attr.capitalize %>: <%= value %><br />
<% end %>

<br />

<a class="btn btn-primary" href="<%= monsters_path %>" role="button">All Monsters</a>

<a class="btn btn-primary" href="<%= edit_monster_path(@monster) %>" role="button">Edit Monster</a>

<a class="btn btn-primary" href="<%= monsters_stats_path %>" role="button">All Stats</a>


<br /><br />
