<h1>All Monsters</h1>

<%= form_tag order_monsters_path do %>
  <%= select_tag :attr, options_for_select(@attributes), prompt: @prompt %>
  <%= submit_tag "Order by" %>
<% end %>
<br />

<div class="monster_container">
  <% @monsters.each do |monster, imgs| %>
  <div class="each_monster">
    <h3><%= link_to monster, monster_path(imgs[:object]) %></h3>
    <div class="monster_bod_small">
      <%= image_tag(imgs[:head], class: "head" + " " + imgs[:head].gsub(".png", "") + " " + "on_" + imgs[:torso].gsub(".png", "")) %><br />
      <%= image_tag(imgs[:torso], class: "torso" + " " + imgs[:torso].gsub(".png", "")) %><br />
      <%= image_tag(imgs[:leg], class: "leg" + " " + imgs[:leg].gsub(".png", "") + " " + "on_" + imgs[:torso].gsub(".png", "")) %><br />
      <%= image_tag(imgs[:l_arm], class: "l_arm" + " " + imgs[:l_arm].gsub(".png", "") + " " + "on_" + imgs[:torso].gsub(".png", "")) %><br />
      <%= image_tag(imgs[:r_arm], class: "r_arm" + " " + imgs[:r_arm].gsub(".png", "") + " " + "on_" + imgs[:torso].gsub(".png", "")) %><br />
    </div>
  </div>
  <% end %>
</div>
